#include <stdio.h>

int calc_lcm(int x, int y);

int main(void) 
{
	int t;
	int m, n, x, y;
	int flag, flag2;
	int lcm;
	int count;
	
	scanf("%d", &t);
	
	for(int i = 0; i < t; i++)
	{
		flag = 0;
		flag2 = 1;
		
		scanf("%d%d%d%d", &m, &n, &x, &y);
		
		lcm = calc_lcm(m, n);
		
		for(int j = 0; ; j++)
		{
			for(int k = 0; ; k++)
			{
				if(x + m * j == y + n * k)
				{
					count = x + m * j;
					flag = 1;
					flag2 = 0;
					break;
				}
				if(y + n * k >= lcm)
				{
					break;
				}
			}
			
			if(x + m * j >= lcm)
			{
				break;
			}
			if(flag)
			{
				break;
			}
		}
		
		printf("%d\n", (!flag2) ? count : -1);
		
	}
	
	return 0;
}

int calc_lcm(int x, int y)
{
	int i;
	
	if(x < y)
	{
		int z = x;
		x = y;
		y = z;
	}
	
	for(i = x; i > 0; i--)
	{
		if(x % i == 0 && y % i == 0)
		{
			break;
		}
	}
	
	return x * y / i;
}
